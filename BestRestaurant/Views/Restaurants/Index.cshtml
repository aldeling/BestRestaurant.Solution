@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
<div>
  <h1>Restaurant</h1>

  @if (@Model.Count == 0)
  {
    <h3>No Restaurants have been added yet!</h3>
  }
  else
  {
  <ul>
    @foreach (Restaurant restaurant in Model)
    {
      <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.Name</li>
    }
  </ul>
  }
</div>

<ul class="navbar">
  <li class="navbar">@Html.ActionLink("Add Restaurant", "Create")</li>
  <li class="navbar">@Html.ActionLink("Home", "Index", "Home")</li>
  <li class="navbar">@Html.ActionLink("Restaurants", "Index")</li>
  <li class="navbar">@Html.ActionLink("Cuisines", "Index", "Cuisines")</li>
</ul>