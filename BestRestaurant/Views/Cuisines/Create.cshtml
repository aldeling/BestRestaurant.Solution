@{
  Layout = "_Layout";
}

@model BestRestaurant.Models.Cuisine

<h4>Add a new cuisine type</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, new {@class = "labelcolor"})
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Description, new {@class = "labelcolor"})
  @Html.TextBoxFor(model => model.Description)

  <input type="submit" value="Add new cuisine" />
}

<p>@Html.ActionLink("Show all cuisines", "Index")</p>